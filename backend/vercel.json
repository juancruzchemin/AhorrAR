{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/healthcheck",
      "dest": "backend/server.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "backend/server.js",
      "headers": {
        "Cache-Control": "no-store"
      }
    }
  ]
}